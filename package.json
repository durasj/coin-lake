{
  "name": "coin-lake",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "jest-expo": "23.0.0",
    "react-native-scripts": "1.8.1",
    "react-test-renderer": "16.0.0"
  },
  "main": "./node_modules/react-native-scripts/build/bin/crna-entry.js",
  "scripts": {
    "start": "react-native-scripts start",
    "eject": "react-native-scripts eject",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test": "node node_modules/jest/bin/jest.js --runInBand",
    "coverage": "node node_modules/jest/bin/jest.js --coverage --runInBand && cat ./coverage/lcov.info | node ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "snapshots": "node node_modules/jest/bin/jest.js -j"
  },
  "jest": {
    "preset": "jest-expo",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/native-base-theme/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/native-base-theme/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|react-navigation|react-clone-referenced-element|react-native-localization|native-base-shoutem-theme||||tcomb-form-native)"
    ]
  },
  "dependencies": {
    "@expo/vector-icons": "^6.2.2",
    "coveralls": "^3.0.0",
    "expo": "^23.0.4",
    "native-base": "^2.3.5",
    "react": "16.0.0",
    "react-native": "0.50.3",
    "react-router-native": "^4.2.0"
  }
}
